# vim: set ft=sh sw=2 ts=8 et :
deploy_bigcouch_variants="default offsite"

deploy_bigcouch_deps()
{
  deploy backend
  deploy wmcore-auth
}

deploy_bigcouch_prep()
{
  mkproj database replication stagingarea
  case $variant in default ) ;; * ) mkproxy ;; esac
}

deploy_bigcouch_sw()
{
  rm -f $project_auth/hmackey.ini
  local host=`hostname -i`
  deploy_pkg -a bigcouch/hmackey.ini comp external+bigcouch
  perl -p -i -e "s|{ROOT}|$root|g" $project_config/local.ini
  perl -p -i -e "s|{ROOT}|$root|g" $project_config/default.ini
  perl -p -i -e "s|{HOST}|$host|g" $project_config/default.ini
  perl -p -i -e "s|{HOST}|$host|g" $project_config/vm.args
  # replace supplied ini files from RPM with project ones
  local project_root=$root/current/apps/$project
  [ -f $project_root/etc/local.ini ] && rm $project_root/etc/local.ini
  [ -f $project_root/etc/default.ini ] && rm $project_root/etc/default.ini
  [ -f $project_root/etc/vm.args ] && rm $project_root/etc/vm.args
  [ -f $project_root/etc/ports.config ] && rm $project_root/etc/ports.config
  ln -s $project_config/default.ini $project_root/etc/default.ini
  ln -s $project_config/local.ini $project_root/etc/local.ini
  ln -s $project_config/vm.args $project_root/etc/vm.args
  ln -s $project_config/ports.config $project_root/etc/ports.config
  grep hmac_secret $project_auth/hmackey.ini >> $project_config/local.ini

  case $variant in
    default )
      ;;
    * )
      perl -p -i -e "s|bind_address = 0.0.0.0|bind_address = 127.0.0.1|g" $project_config/local.ini
      (echo
       echo "[ssl]"
       echo "cert_file = $project_state/proxy/proxy.cert"
       echo "key_file = $project_state/proxy/proxy.cert"
       echo "cacert_file = $project_state/proxy/proxy.cert"
       echo
       echo "[replicator]"
       echo "max_replication_retry_count = infinity"
      ) >> $project_config/local.ini
      ;;
  esac
}

