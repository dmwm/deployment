# vim: set ft=sh sw=2 ts=8 et :
deploy_das_deps()
{
  deploy backend
  deploy wmcore-auth
  deploy mongodb
  deploy admin
}

deploy_das_prep()
{
  mkproj
  mkproxy
}

deploy_das_sw()
{
  deploy_pkg comp cms+das
  perl -p -i -e "s|{ROOT}|$root|" $project_config/analytics_cfg.py
}

deploy_das_post()
{
  case $host in vocms10[67] | vocms13[2689] | vocms16[13] ) disable ;; * ) enable ;; esac
  (mkcrontab; sysboot) | crontab -
}
