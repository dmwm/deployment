# vim: set ft=sh sw=2 ts=8 et :
deploy_mongodb_deps()
{
  deploy backend
}

deploy_mongodb_prep()
{
  mkproj stagingarea db
}

deploy_mongodb_sw()
{
  deploy_pkg comp external+mongo
}

deploy_mongodb_post()
{
  local cmd="sudo -H -u _mongodb bashs -l -c '$project_config/manage updatemaps'"
  case $host in vocms10[67] | vocms13[2689] | vocms16[13] ) disable ;; * ) enable ;; esac
  (mkcrontab; sysboot; mkcrontab; echo "0 0-23 * * * $cmd") | crontab -
}
