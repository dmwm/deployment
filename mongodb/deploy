# vim: set ft=sh sw=2 ts=8 et :
deploy_mongodb_deps()
{
  deploy backend
}

deploy_mongodb_prep()
{
  mkproj db
}

deploy_mongodb_sw()
{
  deploy_pkg comp external+mongo
}

deploy_mongodb_post()
{
  case $host in vocms34 | vocms13[2689] | vocms16[13] | vocms034 | vocms013[2689] | vocms016[13] ) disable ;; * ) enable ;; esac
  (mkcrontab; sysboot) | crontab -
}
