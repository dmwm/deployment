# vim: set ft=sh sw=2 ts=8 et :
deploy_mongodb_deps()
{
  deploy backend
}

deploy_mongodb_prep()
{
  mkproj stagingarea db
}

deploy_mongodb_sw()
{
  deploy_pkg comp external+mongo 1.8.3
}

deploy_mongodb_post()
{
  case $host in vocms10[67] | vocms13[2689] | vocms16[13] ) disable ;; * ) enable ;; esac
  (mkcrontab; sysboot) | crontab -
}
